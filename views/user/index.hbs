<!-- SECTION -->
<div class="section">
	<!-- container -->
	<div class="container">
		<!-- row -->
		<div class="row">

			<!-- section title -->
			<div class="col-md-12">
				<div class="section-title">
					<h3 class="title">What's New</h3>
					{{!-- <div class="section-nav">
						<ul class="section-tab-nav tab-nav">
							<li><a data-toggle="tab" href="/casual-shirt">Casual Shirts</a></li>
							<li><a data-toggle="tab" href="#tab1">Formal shirts</a></li>
							<li><a data-toggle="tab" href="#tab1">T-shirts</a></li>
							<li><a data-toggle="tab" href="#tab1">Jeans</a></li>
							<li><a data-toggle="tab" href="#tab1">Formal Trousers</a></li>
						</ul>
					</div> --}}
				</div>
			</div>
			<!-- /section title -->

			<!-- Products tab & slick -->
			<div class="col-md-12">
				<div class="row">
					<div class="products-tabs">
						<!-- tab -->
						<div id="tab1" class="tab-pane active">
							<div class="products-slick" data-nav="#slick-nav-1">
								<!-- product -->

								{{#each products}}
								<div class="product">
									<div class="product-img">
										<img src="/product-images/{{this._id}}.jpg" alt="">
										<div class="product-label">

											<button onclick="addToWishlist('{{this._id}}')" class="add-to-wishlist"><i
													class="fa fa-heart-o"></i><span class="tooltipp"></span></button>

											{{#if this.offerPercentage}}
											<span class="sale">{{this.offerPercentage}}%</span>
											{{/if}}
											<span class="new">NEW</span>
										</div>
									</div>
									<div class="product-body">
										<p class="product-category">{{this.brand}}</p>
										<h3 class="product-name"><a href="/product-view/{{this._id}}">{{this.name}}</a>
										</h3>
										<h4 class="product-price"><i class="fa fa-inr"
												aria-hidden="true"></i>{{this.price}}
											<del class="product-old-price"><i class="fa fa-inr"
													aria-hidden="true"></i>{{this.OldPrice}}</del>
										</h4>
									</div>
									<div class="add-to-cart">
										<button onclick="addToCart('{{this._id}}')" class="add-to-cart-btn"><i
												class="fa fa-shopping-cart"></i> add to cart</button>
									</div>
								</div>
								{{/each}}


							</div>
						</div>
						<!-- /tab -->
					</div>
				</div>
			</div>
			<!-- Products tab & slick -->
		</div>
		<!-- /row -->
	</div>
	<!-- /container -->
</div>
