<!-- SECTION -->
<div class="section">
    <!-- container -->
    <div class="container">
        <!-- row -->
        <form action="/edit-address" id="" method="post">
            <div class="row">
                <div>
                    <!-- Billing Details -->
                    <div class="billing-details" style="width: 65%;margin: auto;">
                        <div class="section-title">
                            <h3 class="title">Edit address</h3>
                        </div>
                        <div class="form-group">
                            <input class="input" type="text" name="firstname" placeholder="First Name" value="{{addressDetails.firstname}}">
                        </div>
                        <div class="form-group">
                            <input class="input" type="text" name="lastname" placeholder="Last Name" value="{{addressDetails.lastname}}">
                        </div>
                        <div class="form-group">
                            <input class="input" type="email" name="email" placeholder="Email Id" value="{{addressDetails.email}}">
                        </div>
                        <div class="form-group">
                            <input class="input" type="text" name="address" placeholder="Address" value="{{addressDetails.address}}">
                        </div>
                        <div class="form-group">
                            <input class="input" type="text" name="city" placeholder="city" value="{{addressDetails.city}}">
                        </div>
                        <div class="form-group">
                            <input class="input" type="text" name="country" placeholder="Country" value="{{addressDetails.country}}">
                        </div>
                        <div class="form-group">
                            <input class="input" type="text" name="zipcode" placeholder="zip code" value="{{addressDetails.zipcode}}">
                        </div>
                        <div class="form-group">
                            <input class="input" type="tel" name="tel"
                            value="{{addressDetails.tel}}">
                        </div>  
                        <input type="hidden" name="id" value="{{addressDetails._id}}" >
                    <button type="submit" class="btn btn-danger">Save Details</button>
                    </div>
                </div>
        </form>
        <!-- /row -->
    </div>
    <!-- /container -->
</div>
<!-- /SECTION -->