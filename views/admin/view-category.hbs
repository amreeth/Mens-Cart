<div class="main_content_iner ">
  <div class="container-fluid p-0">
    <div class="row justify-content-center">
      <div class="col-lg-12">
        <div class="white_card card_height_100 mb_30">
          <div class="white_card_header">
            <div class="box_header m-0">
              <div class="main-title">
                <h3 class="m-0">Category List</h3>
              </div>
            </div>
          </div>
          <div class="white_card_body">
            <div class="QA_section">
              <div class="white_box_tittle list_header">
                <div class="box_right d-flex lms_block">
                  <div class="serach_field_2">
                    <div class="search_inner">
                      <form Active="#">
                        <div class="search_field">
                          <input type="text" placeholder="Search content here...">
                        </div>
                        <button type="submit"> <i class="ti-search"></i> </button>
                      </form>
                    </div>
                  </div>
                  <div class="add_button ml-10">
                    <a href="/admin/addcategory" type="submit"><button type="button" class="btn btn-success">Add
                        Category/ Add Sub
                        Category</button></a>
                  </div>
                </div>
              </div>

              <div class="QA_table mb_30">
                <!-- table-responsive -->
                <table class="table lms_table_active3 ">
                  <thead>
                    <tr>
                      <th scope="col">No</th>
                      <th scope="col">Category</th>
                      <th scope="col">Sub Category</th>
                      <th scope="col">Manage</th>
                    </tr>
                  </thead>
                  <tbody>
                    {{#each category}}
                    <tr>
                      <th scope="row">{{@index}}</th>
                      <td>{{this.catname}}</td>
                      <td>
                        <ul>
                          {{#each subcategory}}
                          <li>{{this}}<a
                              href="/admin/delete-subcategory?category={{../this.catname}}&subcategory={{this}}"><i
                                style="color: red;padding-left: 5px;" class="fa fa-trash-alt"></i></a></li>
                          {{/each}}
                        </ul>
                      </td>
                      <td>
                        <a href="/admin/editcategorey/{{this._id}}" type="submit"><button type="button"
                            class="btn btn-warning">Edit</button></a>
                        <a href="/admin/deletecategory/{{this._id}}" type="submit"><button type="button"
                            class="btn btn-danger">Delete</button></a>
                      </td>
                    </tr>
                    {{/each}}
                  </tbody>
                </table>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>